<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="#001a4d">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:stretchColumns="*"
        >
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4d88ff"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:padding="5dp">
            <TextView
                android:text="@string/room"
                android:textStyle="normal|bold"
                android:textSize="18sp"
                android:padding="5dp"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="15dp"
            android:layout_weight="1"
            android:weightSum="7"
            android:background="#4d88ff"
            android:layout_margin="1dp">
            <TextView
                android:text="@string/name"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_margin="1dp"/>
            <TextView
                android:id="@+id/booking_name"
                android:layout_width="0dp"
                android:layout_weight="5"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:background="#4d88ff"
            android:layout_margin="1dp"
            android:padding="15dp">
            <TextView
                android:text="@string/title"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_weight="2"/>
            <TextView
                android:id="@+id/booking_title"
                android:layout_width="0dp"
                android:layout_weight="5"/>
         </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:background="#4d88ff"
            android:layout_margin="1dp"
            android:padding="15dp">
            <TextView
                android:text="@string/email"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_weight="2"/>
            <TextView
                android:id="@+id/booking_email"
                android:layout_width="0dp"
                android:layout_weight="5"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="#4d88ff"
            android:layout_weight="1"
            android:layout_margin="1dp"
            android:padding="15dp">
            <TextView
                android:text="@string/notes"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_weight="2"/>
            <TextView
                android:id="@+id/booking_notes"
                android:layout_width="0dp"
                android:layout_weight="5"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="#4d88ff"
            android:layout_weight="1"
            android:layout_margin="1dp"
            android:padding="10dp"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/book"
                android:background="#0044cc"
                android:layout_margin="10dp"
                android:onClick="makeBooking"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Cancel"
                android:background="#0044cc"
                android:layout_margin="10dp"
                android:onClick="cancelBooking"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/ok"
                android:background="#0044cc"
                android:layout_margin="10dp"
                android:onClick="gotoTable"/>
        </TableRow>
    </TableLayout>
</LinearLayout>